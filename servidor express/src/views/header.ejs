<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ʆᵒᵛᵉʆᵒᵒᵏ</title>
    <!-- FONT AWESOME -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
        integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />

    <!-- ICONIFY -->
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="/css/general.css">

    <!-- Scripts -->
    <script src="/js/header.js" defer></script>
    <script src="/js/footer.js" defer></script>

    <!-- FAVICON -->

    <link rel="apple-touch-icon" sizes="180x180" href="/img/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/img/icons/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    
</head>

<body>
    <header class="header">
        <a href="/" class="logo">

            <img src="/img/logo.png" alt=""></a>
        <!-- ICONO MENU HAMBURGUESA -->
        <a class="menu icon-size align-icon">
            <span id="menu-burger" onclick="abrirMenu()" class="iconify " data-icon="icon-park-outline:hamburger-button"
                data-inline="false"></span>
        </a>

        <!-- NAVEGACION PRINCIPAL -->
        <div class="navbar-mobile" id="N1">
            <ul>
                <li class="btn "><a class="b1" href="/">Inicio</a></li>
                <li class="btn "><a class="b2" href="/">Categorias</a></li>
                <li class="btn "><a class="b3" href="/Lista_de_productos">Accesorios</a></li>
                <li class="btn "><a class="b4" href="/Lista_de_productos">Oportunidades</a></li>
            </ul>
        </div>
        <!-- ICONO DE LUPA  -->
        <a class="lupa icon-size align-icon">
            <span class="iconify" onclick="abrirBuscador()" id="search" data-icon="akar-icons:search"
                data-inline="false"></span>
        </a>

        <!-- ICONO DE FAVORITOS (estrella) -->
        <a class="estrella icon-size align-icon" href="/favoritos">
            <span class="iconify" data-icon="akar-icons:star" data-inline="false"></span>
        </a>

        <!-- ICONO DE CARRITO DE COMPRA -->
        <a class="carrito align-icon icon-size" href="/carrito">
            <span class="iconify " data-icon="emojione-monotone:shopping-cart" data-inline="false"></span>
        </a>

        <!-- ICONO DE USUARIO (circle) -->
        <a href="/login" class="usuario align-icon icon-size">
            <span class="iconify  " data-icon="bi:person-circle" data-inline="false"></span>
        </a>

        <!-- NAVEGACION PRINCIPAL (DESKTOP) -->
        <nav class="navbar" id="subMenu">
            <ul>
                <li class="btn"><a href="/">Inicio</a></li>
                <li class="btn"><a href="/">Categorias</a></li>
                <li class="btn"><a href="/Lista_de_productos">Accesorios</a></li>
                <li class="btn"><a href="/Lista_de_productos">Oportunidades</a></li>
            </ul>
        </nav>

        <!-- BARRA DE BUSQUEDA -->
        <form action="" class="search-bar" id="search-mobile-tablet">
            <input type="text" class="input-header" name="" id="" placeholder="Buscar...">
            <button type="submit"><span class="iconify iconLupaBar" data-icon="akar-icons:search"
                    data-inline="false"></span></button>
        </form>
    </header>

</body>

</html>