<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head.ejs') %> 
   
<body>

    <%- include('./partials/header.ejs') %> 

    <main class="container-listProduct">
        <section class="section1">
            <span class="iconify iconFilter" data-icon="mi:filter" data-inline="false"></span>
            <nav class="nav-bar">
                <input class="filted" type="submit" value="FILTRAR">
                <ul>
                    <li class="dropdown">COLOR
                        <ul>
                            <li>AZUL</li>
                            <li>NEGRO</li>
                            <li>ROSA</li>
                            <li>LILA</li>
                        </ul>
                    </li>
                </ul>
                <ul>
                    <li class="dropdown">TALLE
                        <ul>
                            <li>S</li>
                            <li>M</li>
                            <li>L</li>
                            <li>XL</li>
                        </ul>
                    </li>
                </ul>
                <ul>
                    <li class="dropdown">PRECIO
                        <ul>
                            <li>$1000</li>
                            <li>$1100</li>
                            <li>$1200</li>
                            <li>$1300</li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </section><br>
        <hr>
        <section class="section2">
            <% products.forEach(product=>{ %> 
            <article class="product">
                <img src="/img/remerones/vintage/remeronPicapiedras.jpg" alt="">
                <h3><%= product.name %></h3><br>
                <h3>$<%= product.price %></h3><br>
                <p><%= product.discount %>% Descuento</p>
            </article>
            <% }) %> 
        </section>
    </main>

    <%- include('./partials/whatsapp.ejs') %> 

    <%- include('./partials/footer.ejs') %> 



</body>

</html>