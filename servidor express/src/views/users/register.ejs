<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/header.ejs')%>

    <div class="register">
        <form action="/user/registerUser" method="POST" class="card modal-content-register">
            <figure class="card__thumbnail">
                <img src="/img/logo.png" alt="" class="card__logo">
            </figure>
            <div class="input-container">
                <input class="input--style" type="text" name="name" placeholder="Nombre" value="<%= locals.old && old.name %>">
                <% if (locals.errors && errors.name) { %> 
                    <small class="errors-validation_register"><%= errors.name.msg %></small>
                <% } %>
                <input class="input--style" type="text" name="last_name" placeholder="Apellido" value="<%= locals.old && old.last_name %>">
                <% if (locals.errors && errors.last_name) { %> 
                    <small class="errors-validation_register"><%= errors.last_name.msg %></small>
                <% } %>
                <input class="input--style" type="email" name="email" placeholder="E-mail" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.email) { %> 
                    <small class="errors-validation_register"><%= errors.email.msg %></small>
                <% } %>
                <input class="input--style" type="password" name="pass1" placeholder="Contraseña">
                <% if (locals.errors && errors.pass1) { %> 
                    <small class="errors-validation_register"><%= errors.pass1.msg %></small>
                <% } %>
                <input class="input--style" type="password" name="pass2" placeholder="Confirmar contraseña" >
                <% if (locals.errors && errors.pass2) { %> 
                    <small class="errors-validation_register"><%= errors.pass2.msg %></small>
                <% } %>
            </div>
            <div class="conditions">
    
                <input class="input__check" type="checkbox" name="condiciones" id="condiciones">
                <label class="check__label" for="condiciones">Aceptar <a href="/info/we#Terminos"
                        class="link-conditions">condiciones</a></label>
                        <% if (locals.errors && errors.condiciones) { %> 
                            <small class="errors-validation_register"><%= errors.condiciones.msg %></small>
                        <% } %>
            </div>
            <button class="button btn-register" type="submit" value="Registrar">Registrar</button>
            <a href="/user/login" class="haveAccount">Ya tengo cuenta</a>
        </form>
    </div>

    <%- include('../partials/footer.ejs') %> 
    <%- include('../partials/scripts.ejs') %> 

</body>

</html>