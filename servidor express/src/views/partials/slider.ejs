<div class="container"><!--  -->
  <div class="card-slider">
    <% products.forEach(product => { %>
      <div class="col-lg-12">
        <div class="card w-100">
          <a href="/products/detail/<%= product.id %>">
            <img class="card-img-top" src="/img/photos/<%= product.images.length > 0? product.images[0].filename:'default.png' %>">
          </a>
          <div class="card-body">
            <h5 class="card-title">
              <%= product.name %>
            </h5>
            <p class="price">
              <%=toThousand(Math.round(product.price - product.price * product.discount /
                  100))%>
          </p>
            <span class="price-line-medio">
              <%= product.discount> 0?`$${toThousand(Math.round(product.price))}` : "" %>
          </span>
          <p class="discount">
              <%=product.discount> 0?`${product.discount} %Off` : "" %>
          </p>
            <a href="/user/cart" class="btn-primary">Comprar</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>