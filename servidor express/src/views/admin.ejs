<!DOCTYPE html>
<html lang="es">

    <%- include('./partials/head.ejs') %> 

<body>
    <%- include('./partials/header.ejs') %> 
    <main class="admin">
        <h2>Productos</h2>
        <div class="container">

            <form action="" method="GET" class="inputRows">

                <input type="number" name="id" id="id" placeholder="ID" required title="ID">

                <input type="text" name="codigo" id="code" placeholder="Código" required title="Código">


                <input type="text" name="descripcion" id="description" placeholder="Descripción" required title="Descripción">


                <input type="number" name="descuento" id="discount" placeholder="Descuento %" title="Descuento">


                <input type="number" name="precioVenta" id="priceV" placeholder="Precio" required title="Precio">


                <select type="text" name="color" id="color" placeholder="Color" required title="Color">
                    <option value="" selected hidden>Color</option>
                    <option value="verde">verde</option>
                        <option value="lila">lila</option>
                        <option value="gris">gris</option>
                        <option value="negro">negro</option>
                        <option value="blanco">blanco</option>
                        <option value="natural">natural</option>
                        <option value="rosa">rosa</option>
                        <option value="celeste">celeste</option>
                        <option value="naranja">naranja</option>
                </select>


                <select name="talle" id="size" required title="Talle">
                    <option selected hidden>Talle</option>
                    <option value="s">S</option>
                    <option value="m">M</option>
                    <option value="l">L</option>
                    <option value="xl">XL</option>
                    <option value="xxl">XXL</option>
                </select>

                <input type="number" name="cantidad" id="stock" placeholder="Cantidad" required title="Stock">

                <div class="input">
                    <label for="file-upload" class="subir">
                        <i class="fas fa-cloud-upload-alt"></i> Subir imágenes
                    </label>
                    <div id="info"></div>

                    <input id="file-upload" onchange='cambiar()' accept=".png, .jpg" type="file" style='display: none;' required multiple>
                </div>

                <button type="submit" class="btn-add"><span class="iconify" data-icon="fluent:add-12-filled"></span></button>
                <button type="reset" class="btn-reset"><span class="iconify" data-icon="whh:broom"></span></button>


            </form>
            <div class="table-container">

                <table>
                    <tr>
                        <th>ID</th>
                        <th>Código</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Color</th>
                        <th>Talle</th>
                        <th>Cantidad</th>
                        <th>Imagen</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                    <% products.forEach(product=>{ %> 
                    <tr>
                        <td><%=product.id  %> </td>
                        <td><%=product.code  %></td>
                        <td><%=product.name  %></td>
                        <td><%=product.price  %></td>
                        <td><%=product.color  %></td>
                        <td><%=product.size.toUpperCase()  %></td>
                        <td><%=product.stock  %></td>
                        <td><img class="img-value" src="/img/photos/<%=product.image %>" alt=""></td>
                        <td><button class="edit" type="submit"><span class="iconify" data-icon="line-md:edit"></span></button></td>
                        <td><button class="delete" type="submit"><span class="iconify" data-icon="feather:delete"></span></button>
                        </td>
                    </tr>
                    <% }) %> 
                </table>
            </div>


        </div>
        </div>
        </div>
    </main>
    <%- include('./partials/whatsapp.ejs') %> 
    <%- include('./partials/footer.ejs') %> 

</body>

</html>