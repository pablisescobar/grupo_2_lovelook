<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>

        <%- include('../partials/header.ejs')%>

            <main class="details-products">
                <section class="product">

                    <!-- Imagenes del producto -->

                    <div class="imgs row">
                        <% product.image.forEach(img => { %>
                            <div class="column">
                                <img src="/img/photos/<%= img %>" alt="Nature" style="width:100%"
                                    onclick="myFunction(this);">
                            </div>
                            <% });%>
                    </div>

                    <div class="containerImage">
                        <span onclick="this.parentElement.style.display='none'" class="closebtn">&times;</span>
                        <img id="expandedImg" style="width:fit-content">
                        <div id="imgtext"></div>
                    </div>


                    <!-- detalle del producto -->
                    <div class="description">
                        <p class="name">
                            <%=product.name%>
                        </p>
                        <p class="price">
                            <%=toThousand(Math.round(product.price - product.price * product.discount / 100))%>
                        </p>
                        <span class="price-line-medio"><%= product.discount > 0?`$${product.price}` : "" %></span>
                        <p class="discount">
                            <%=product.discount > 0?`${product.discount}% Descuento` : "" %>
                        </p>
                    </div>

                    <!-- filtro de producto -->
                    <form class="form-1" action="#" name="formulario-1">
                        <h4 class="subtitle">Descripción del producto</h4>
                        <select class="select select-style" name="color" id="">
                            <option value="" selected hidden>Color</option>
                            <option value="">Negro</option>
                            <option value="">Natural</option>
                            <option value="">Lila</option>
                            <option value="">Rosa</option>
                            <option value="">Blanco</option>
                        </select>
                        <select class="select select-style" name="talle" id="">
                            <option value="" selected hidden>Talles</option>
                            <option value="">S</option>
                            <option value="">M</option>
                            <option value="">L</option>
                            <option value="">XL</option>
                        </select>
                        <div class="btn-add">
                            <input type="submit" value="Agregar al carrito">
                        </div>
                        <h4 class="subtitle-guie-size"><a href="#img-guie">Guiá de talles</a></h4>
                    </form>
                    <!--  -->
                    <form class="form-2" action="#" name="formulario-2">

                        <select class="select" name="sends" id="">
                            <option value="" select>Envíos</option>
                            <option value="correo">Correo</option>
                            <option value="retiro-sucursal">Retiro sucursal</option>
                            <option value="correo-express">Correo express</option>
                        </select>
                        <select class="select" name="pay" id="">
                            <option value="" selected>Medios de pago</option>
                            <option value="deb">Débito</option>
                            <option value="credit">Crédito</option>
                            <option value="transfer">Transferencia</option>
                            <option value="paid-market">Mercado pago</option>
                        </select>
                        <select class="select" name="changes" id="">
                            <option value="" selected>Cambios y devoluciones</option>
                            <option value="X">Fallado</option>
                            <option value="Y">No es lo que esperaba</option>
                            <option value="Z">Talle equivocado</option>
                            <option value="A">...</option>
                        </select>

                    </form>
                </section>
