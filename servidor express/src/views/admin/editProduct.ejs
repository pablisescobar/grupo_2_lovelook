<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/headerAdmin.ejs') %>

            <main class="admin">
                <h2>Productos</h2>
                <div class="container">

                    <form action="/admin/products/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="inputRows">
                        <input type="text" name="name" id="name" placeholder="<%- product.name %>" title="nombre">

                        <input type="text" name="description" id="description" placeholder="Descripción"
                            title="Descripción">


                        <!-- SELECT DE TEMPORADA -->
                        <select name="season" id="season" title="temporada">
                            <option selected hidden>Temporada</option>
                            <option value="invierno">Invierno</option>
                            <option value="verano">Verano</option>
                            <option value="otonio">Otoño</option>
                            <option value="primavera">Primavera</option>
                        </select>

                        <!-- SELECT DE CATEGORÍA -->
                        <select name="category" id="category" title="category">
                            <option selected hidden>Categorías</option>
                            <option value="babuchas">Babuchas</option>
                            <option value="buzos">Buzos</option>
                            <option value="camperas">Camperas</option>
                            <option value="Conjunto">Conjunto</option>
                            <option value="jeans">Jeans</option>
                            <option value="maxibuzos">Maxibuzos</option>
                            <option value="pijamas">Pijamas</option>
                            <option value="polleras">Polleras</option>
                            <option value="remeras">Remeras</option>
                            <option value="remerones">Remerones</option>
                            <option value="shorts">Shorts</option>
                        </select>


                        <input type="number" name="discount" id="discount" placeholder="Descuento %" title="Descuento">


                        <input type="number" name="price" id="price" placeholder="Precio" title="Precio">


                        <!-- SELECT DE COLOR -->
                        <select name="color" id="color" title="color">
                            <option value="amarillo">Amarillo</option>
                            <option selected hidden>Color</option>
                            <option value="blanco">Blanco</option>
                            <option value="celeste">Celeste</option>
                            <option value="gris">Gris</option>
                            <option value="lila">Lila</option>
                            <option value="marron">Marrón</option>
                            <option value="naranja">Naranja</option>
                            <option value="natural">Natural</option>
                            <option value="negro">Negro</option>
                            <option value="rosa">Rosa</option>
                        </select>

                        <!-- SELECT DE TALLE -->
                        <select name="size" id="size" title="Talle">
                            <option selected hidden>Talle</option>
                            <option value="s">S</option>
                            <option value="m">M</option>
                            <option value="l">L</option>
                            <option value="xl">XL</option>
                        </select>

                        <input type="number" name="stock" id="stock" placeholder="Cantidad" title="Stock">


                        <div class="input">
                            <label for="file-upload" class="subir">
                                <i class="fas fa-cloud-upload-alt"></i> Subir imágenes
                            </label>
                            <div id="info" style="margin: 3px;"></div>


                            <input name="image" id="file-upload" onchange='cambiar()' accept=".png, .jpg" type="file"
                                style='display: none;'>
                        </div>

                            <input name="image" id="file-upload" onchange='cambiar()' accept=".png, .jpg" type="file"
                                style='display: none;' multiple>
                        </div>
                        <button type="submit" class="btn-add"><span class="iconify"
                                data-icon="ant-design:save-outlined"></span></button>


                        <a href="/admin/products" class="left-row"><span class="iconify"
                                data-icon="bi:arrow-left-square"></span></a>


                    </form>

                </div>

            </main>
    </body>

</html>