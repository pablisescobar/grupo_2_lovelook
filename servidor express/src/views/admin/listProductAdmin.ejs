<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/headerAdmin.ejs') %>
            <main class="admin">
                <div class="button-add">
                    <a href="/admin/products/add"><span class="iconify" data-icon="fluent:add-12-filled"></span>Agregar
                        Productos</a>
                </div>
                <div class="table-container"> 
                    <table>
                        <div class="icons-guie-scroll">
                            <div class="icon-touch">
                                <span class="iconify" data-icon="carbon:touch-interaction"></span>
                            </div>
                            <div class="icon-right-table">
                                <span class="iconify" data-icon="akar-icons:arrow-right"></span>
                            </div>
                        </div>
                        <tr>
                            <th>Editar</th>
                            <th>Precio</th>
                            <th>Imagen</th>
                            <th>Descripción</th>
                            <th>ID</th>
                            <th>Código</th>
                            <th>Color</th>
                            <th>Talle</th>
                            <th>Cantidad</th>
                            <th>Eliminar</th>
                        </tr>
                        <% products.forEach(product=>{ %>
                            <tr>
                                <td><a class="edit" role="button" href="/admin/products/edit/<% product.id %>"><span class="iconify"
                                            data-icon="line-md:edit"></span></a></td>
                                <td>$<%= toThousand(product.price)%>
                                </td>
                                <td><img class="img-value" src="/img/photos/<%=product.image[0] %>" alt=""></td>
                                <td>
                                    <%=product.name %>
                                </td>
                                <td>
                                    <%=product.id %>
                                </td>
                                <td>
                                    <%=product.code %>
                                </td>
                                <td>
                                    <%=product.color %>
                                </td>
                                <td>
                                    <%=product.size.toUpperCase() %>
                                </td>
                                <td>
                                    <%=product.stock %>
                                </td>
                                <td><button class="delete" type="submit"><span class="iconify"
                                            data-icon="feather:delete"></span></button>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
            </main>

    </body>

</html>